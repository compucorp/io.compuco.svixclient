<?xml version="1.0"?>
<extension key="io.compuco.svixclient" type="module">
  <file>svixclient</file>
  <name>Svix Client</name>
  <description>CiviCRM Svix webhook client for payment extensions (Stripe, GoCardless) to register webhook destinations.</description>
  <license>AGPL-3.0</license>
  <authors>
    <author>
      <name>Compuco</name>
      <email>hello@compuco.io</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://github.com/compucorp/io.compuco.svixclient</url>
    <url desc="Documentation">https://github.com/compucorp/io.compuco.svixclient</url>
    <url desc="Support">https://github.com/compucorp/io.compuco.svixclient/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2026-01-12</releaseDate>
  <version>7.0.0-alpha1</version>
  <develStage>alpha</develStage>
  <compatibility mode="semver">
    <comments>Semantic versioning. For example, compatibility with "6.1" implies compatibility with "6.2".</comments>
    <ver>6.4</ver>
  </compatibility>
  <php_compatibility mode="list">
    <comments>Requires PHP 8.1</comments>
    <ver>8.1</ver>
  </php_compatibility>
  <smarty_compatibility mode="list">
    <comments>Listed versions. For example, specify both "4" and "5".</comments>
    <ver>5</ver>
  </smarty_compatibility>
  <comments>Svix webhook client for CiviCRM payment processors</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Svixclient</namespace>
    <format>25.10.2</format>
    <angularModule>crmSvixclient</angularModule>
  </civix>
  <mixins>
    <mixin>entity-types-php@2.0.0</mixin>
    <mixin>mgd-php@2.0.0</mixin>
    <mixin>scan-classes@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
  <upgrader>CiviMix\Schema\Svixclient\AutomaticUpgrader</upgrader>
</extension>
